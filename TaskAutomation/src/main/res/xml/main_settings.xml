<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/settings_main_enable_scheduler_title">
   	    <CheckBoxPreference
			android:key="settings_main_enable_scheduler"
			android:title="@string/settings_main_enable_scheduler_title"
			android:summary="@string/settings_main_enable_scheduler_summary_ena" />
   	    <ListPreference
			android:key="settings_main_scheduler_max_task_count"
			android:title="@string/settings_main_scheduler_max_task_count_title"
			android:summary="@string/settings_main_scheduler_max_task_count_summary"
			android:dialogTitle="@string/settings_main_scheduler_max_task_count_title"
			android:entries="@array/settings_main_scheduler_max_task_count_list_entries"
			android:entryValues="@array/settings_main_scheduler_max_task_count_list_entries"/>
   	    <ListPreference
			android:key="settings_main_scheduler_thread_pool_count"
			android:title="@string/settings_main_scheduler_thread_pool_count_title"
			android:summary="@string/settings_main_scheduler_thread_pool_count_summary"
			android:dialogTitle="@string/settings_main_scheduler_thread_pool_count_title"
			android:entries="@array/settings_main_scheduler_thread_pool_count_list_entries"
			android:entryValues="@array/settings_main_scheduler_thread_pool_count_list_entries"/>
   	    
   	    <CheckBoxPreference
			android:key="settings_main_scheduler_monitor"
			android:title="@string/settings_main_scheduler_monitor_title"
			android:summary="@string/settings_main_scheduler_monitor_summary_ena" />
   	    	    
   	    <CheckBoxPreference
			android:key="settings_main_device_admin"
			android:title="@string/settings_main_device_admin_title"
			android:summary="@string/settings_main_device_admin_summary_ena" />

   	    <ListPreference
			android:key="settings_main_scheduler_sleep_wake_lock_option"
			android:title="@string/settings_main_scheduler_sleep_wake_lock_option_title"
			android:summary="@string/settings_main_scheduler_sleep_wake_lock_option_summary"
			android:dialogTitle="@string/settings_main_scheduler_sleep_wake_lock_option_title"
			android:entries="@array/settings_main_scheduler_sleep_wake_lock_option_list_entries"
			android:entryValues="@array/settings_main_scheduler_sleep_wake_lock_option_list_values"/>
   	    	    
   	    <CheckBoxPreference
			android:key="settings_main_scheduler_sleep_wake_lock_light_sensor"
			android:title="@string/settings_main_scheduler_sleep_wake_lock_light_sensor_title"
			android:summary="@string/settings_main_scheduler_sleep_wake_lock_light_sensor_summary_ena" />

   	    <CheckBoxPreference
			android:key="settings_main_scheduler_sleep_wake_lock_proximity_sensor"
			android:title="@string/settings_main_scheduler_sleep_wake_lock_proximity_sensor_title"
			android:summary="@string/settings_main_scheduler_sleep_wake_lock_proximity_sensor_summary_ena" />

   	    <CheckBoxPreference
			android:key="settings_main_use_root_privilege"
			android:title="@string/settings_main_use_root_privilege_title"
			android:summary="@string/settings_main_use_root_privilege_summary_ena" />
   	    	    	    	    	    	    	    
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/settings_main_log_title">
   	    <CheckBoxPreference
			android:key="settings_main_log_option"
			android:title="@string/settings_main_log_option_title"
			android:summary="@string/settings_main_log_option_summary_ena" />
   	    
   	    <ListPreference
			android:key="settings_main_log_level"
			android:title="@string/settings_main_log_level_title"
			android:summary="@string/settings_main_log_level_summary"
			android:dialogTitle="@string/settings_main_log_level_dialog_title"
			android:entries="@array/settings_main_log_level_list_entries"
			android:entryValues="@array/settings_main_log_level_list_values"/>

   	    <ListPreference
			android:key="settings_main_log_file_max_count"
			android:title="@string/settings_main_log_file_max_count_title"
			android:summary="@string/settings_main_log_file_max_count_summary"
			android:dialogTitle="@string/settings_main_log_file_max_count_dialog_title"
			android:entries="@array/settings_main_log_file_max_count_list_entries"
			android:entryValues="@array/settings_main_log_file_max_count_list_values"/>
   	    	    	    
   	    <com.sentaroh.android.Utilities.Preference.DirectorySelectPreference
			android:key="@string/settings_main_log_dir"
			android:title="@string/settings_main_log_dir_title"
			android:summary="@string/settings_main_log_dir_summary"
			android:inputType="text"/>
   	    	    
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/settings_main_misc_title">
   	    <CheckBoxPreference
			android:key="settings_main_exit_clean"
			android:title="@string/settings_main_exit_clean_title"
			android:summary="@string/settings_main_exit_clean_summary_ena" />
   	    <CheckBoxPreference
			android:key="settings_main_sample_recreate"
			android:title="@string/settings_main_sample_recreate_title"
			android:summary="@string/settings_main_sample_recreate_summary_ena" />
	</PreferenceCategory>
		
	<PreferenceCategory android:title="@string/settings_main_light_sensor_title">
   	    <CheckBoxPreference
			android:key="settings_main_light_sensor_use_thread"
			android:title="@string/settings_main_light_sensor_use_thread_title"
			android:summary="@string/settings_main_light_sensor_use_thread_summary_ena" />
	    <ListPreference
			android:key="settings_main_light_sensor_monitor_interval_time"
			android:title="@string/settings_main_light_sensor_monitor_interval_time_title"
			android:summary="@string/settings_main_light_sensor_monitor_interval_time_summary"
			android:dialogTitle="@string/settings_main_light_sensor_monitor_interval_time_title"
			android:entries="@array/settings_main_light_sensor_monitor_interval_time_list_entries"
			android:entryValues="@array/settings_main_light_sensor_monitor_interval_time_list_entries"
			android:dependency="settings_main_light_sensor_use_thread"/>
   	    <ListPreference
			android:key="settings_main_light_sensor_monitor_active_time"
			android:title="@string/settings_main_light_sensor_monitor_active_time_title"
			android:summary="@string/settings_main_light_sensor_monitor_active_time_summary"
			android:dialogTitle="@string/settings_main_light_sensor_monitor_active_time_title"
			android:entries="@array/settings_main_light_sensor_monitor_active_time_list_entries"
			android:entryValues="@array/settings_main_light_sensor_monitor_active_time_list_entries"
			android:dependency="settings_main_light_sensor_use_thread"/>
   	    		    		    
   	    <ListPreference
			android:key="settings_main_light_sensor_detect_thresh_hold"
			android:title="@string/settings_main_light_sensor_detect_thresh_hold_title"
			android:summary="@string/settings_main_light_sensor_detect_thresh_hold_summary"
			android:dialogTitle="@string/settings_main_light_sensor_detect_thresh_hold_title"
			android:entries="@array/settings_main_light_sensor_detect_thresh_hold_list_entries"
			android:entryValues="@array/settings_main_light_sensor_detect_thresh_hold_list_entries"/>
   	    <ListPreference
			android:key="settings_main_light_sensor_ignore_time"
			android:title="@string/settings_main_light_sensor_ignore_time_title"
			android:summary="@string/settings_main_light_sensor_ignore_time_summary"
			android:dialogTitle="@string/settings_main_light_sensor_ignore_time_title"
			android:entries="@array/settings_main_light_sensor_ignore_time_list_entries"
			android:entryValues="@array/settings_main_light_sensor_ignore_time_list_entries"/>
   	</PreferenceCategory>
</PreferenceScreen>