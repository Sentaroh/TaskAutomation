<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile_action_ll_compare"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <Spinner
			style="@android:style/Widget.Spinner"
            android:id="@+id/edit_profile_action_compare_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
			android:background="@drawable/spinner_color_background"	
			android:minHeight="30dp"		        
	        android:paddingLeft="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <Spinner
			style="@android:style/Widget.Spinner"
            android:id="@+id/edit_profile_action_compare_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
			android:background="@drawable/spinner_color_background"	
			android:minHeight="30dp"		        
	        android:paddingLeft="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    
    </LinearLayout>

    <Button
        android:id="@+id/edit_profile_action_compare_value_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Item" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

	    <EditText
	        android:id="@+id/edit_profile_action_compare_value1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:hint="value 1"
	        android:inputType="number"
	        android:singleLine="true"
	        android:textAppearance="?android:attr/textAppearanceMedium"/>
	    
	    <EditText
		    android:id="@+id/edit_profile_action_compare_value2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
		    android:hint="Value 2"
	        android:inputType="number"
		    android:singleLine="true"
		    android:textAppearance="?android:attr/textAppearanceMedium"/>
	    
    </LinearLayout>
    
    <ListView
        android:id="@+id/edit_profile_action_compare_value_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false" >

    </ListView>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="10dp"
	        android:text="@string/msgs_edit_profile_action_compare_result_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
			style="@android:style/Widget.Spinner"
            android:id="@+id/edit_profile_action_compare_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
			android:background="@drawable/spinner_color_background"	
			android:minHeight="30dp"		        
	        android:paddingLeft="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
	    	    	    
    </LinearLayout>

</LinearLayout>