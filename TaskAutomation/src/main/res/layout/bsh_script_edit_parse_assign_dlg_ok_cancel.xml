<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="HardcodedText,UselessParent,InefficientWeight,NestedWeights" >

    <Button
        android:id="@+id/bsh_script_edit_parse_assign_dlg_ok_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/msgs_common_dialog_ok" />

    <Button
        android:id="@+id/bsh_script_edit_parse_assign_dlg_cancel_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/msgs_common_dialog_cancel" />

</LinearLayout>