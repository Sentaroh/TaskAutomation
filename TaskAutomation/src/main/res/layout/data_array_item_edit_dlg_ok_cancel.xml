<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
        <Button
            android:id="@+id/data_array_item_edit_dlg_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/msgs_edit_profile_action_activity_extra_data_dlg_update_apply_btn"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/data_array_item_edit_dlg_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/msgs_common_dialog_cancel" 
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
</LinearLayout>
