<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ctv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    tools:ignore="SpUsage" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/control_tab_view_export"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_export_profile"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_export_profile_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/control_tab_view_import"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_import_profile"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_import_profile_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/control_tab_view_log_option"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_log_option_enabled"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_log_option_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/control_tab_view_rotate_log_file"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_rotate_logfile"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_rotate_log_file_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/control_tab_view_delete_log_file"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_delete_logfile"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_delete_logfile_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/control_tab_view_send_log_file"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_send_logfile"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_send_log_file_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/control_tab_view_manage_log_file"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_manage_logfile"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_manage_log_file_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/control_tab_view_manage_trust_list"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_manage_trust_list"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_manage_trust_list_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/control_tab_view_quick_task_switch"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_quick_task_switch_enabled"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_quick_task_switch_desc"
            ctv:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/control_tab_view_quick_task_settings"
            android:layout_width="230dp"
            android:layout_height="fill_parent"
            android:gravity="left|center_vertical"
            android:text="@string/msgs_control_tab_quick_task_settings"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.sentaroh.android.Utilities.Widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            ctv:text="@string/msgs_control_tab_quick_task_settings_desc"
            ctv:textSize="15dp" />
    </LinearLayout>
    
</LinearLayout>