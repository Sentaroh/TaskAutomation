<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile_action_ll_bsh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,TextFields" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

	    <Spinner
			style="@android:style/Widget.Spinner"
	        android:id="@+id/edit_profile_action_dlg_bsh_cat_method"
	        android:layout_height="wrap_content"
	        android:layout_width="0dp"
	        android:layout_weight="1"
			android:background="@drawable/spinner_color_background"	
			android:minHeight="30dp"		        
	   		android:paddingLeft="5dp"
	   		android:layout_marginBottom="5dp"
	   		android:layout_marginLeft="5dp"
	   		android:layout_marginRight="5dp"
	        android:textAppearance="?android:attr/textAppearanceSmall"/>
        
	    <Spinner
			style="@android:style/Widget.Spinner"
	        android:id="@+id/edit_profile_action_dlg_bsh_add_method"
	        android:layout_height="wrap_content"
	        android:layout_width="0dp"
	        android:layout_weight="1"
			android:background="@drawable/spinner_color_background"	
			android:minHeight="30dp"		        
	   		android:paddingLeft="5dp"
	   		android:layout_marginBottom="5dp"
	   		android:layout_marginLeft="5dp"
	   		android:layout_marginRight="5dp"
	        android:textAppearance="?android:attr/textAppearanceSmall"/>
        
    </LinearLayout>

 	<EditText
 	    android:id="@+id/edit_profile_action_dlg_bsh_script_text"
 	    android:layout_width="match_parent"
 	    android:layout_height="0dp"
 	    android:layout_weight="1"
 	    android:ems="10"
 	    android:gravity="top"
 	    android:hint="Please fill in BeanShell script text"
 	    android:textSize="15sp"
 	    android:typeface="monospace" >

 	    <requestFocus />
 	</EditText>

</LinearLayout>