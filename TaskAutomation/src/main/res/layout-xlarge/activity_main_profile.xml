<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_profedit_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<ListView
        android:id="@+id/main_profedit_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false">
    </ListView>
    <include layout="@layout/context_view_profile"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
        >
		<Spinner
			style="@android:style/Widget.Spinner"
		    android:id="@+id/main_profedit_profile_group_spinner"
			android:background="@drawable/spinner_color_background"	
			android:minHeight="60dp"
			android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="5dp"
	        android:layout_marginRight="5dp"/>
		<Spinner
			style="@android:style/Widget.Spinner"
		    android:id="@+id/main_profedit_filter_spinner"
			android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:paddingLeft="5dp"
			android:background="@drawable/spinner_color_background"	
			android:minHeight="60dp"/>
	</LinearLayout>
							    
</LinearLayout>
