<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="TextFields,HardcodedText" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

	    <Spinner
	        android:id="@+id/edit_profile_action_exec_activity_name"
	        style="@android:style/Widget.Spinner"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_weight="1"
	        android:background="@drawable/spinner_color_background"
	        android:minHeight="30dp"
	        android:paddingLeft="5dp"/>
        
        <Spinner
            android:id="@+id/edit_profile_action_exec_activity_data_type"
            style="@android:style/Widget.Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/spinner_color_background"
            android:minHeight="30dp"
            android:paddingLeft="5dp"/>

        <Button
            android:id="@+id/edit_profile_action_exec_activity_uri_data_filelist"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            android:text="@string/msgs_edit_profile_action_list_file" 
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edit_profile_action_exec_activity_uri_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="uri"
        android:inputType="textMultiLine"
        android:singleLine="false" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/edit_profile_action_exec_activity_extra_data_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1">
    </ListView>
    
</LinearLayout>